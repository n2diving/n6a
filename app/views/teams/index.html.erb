<h1>teams</h1>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>team name</th>
      <th>start date</th>
      <th>end date</th>
      <th class="text-center">actions</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.team_name, team %></td>
        <td><%= team.start_date %></td>
        <td><%= team.end_date %></td>

        <td class="text-center">
          <%= link_to edit_team_path(team), class: "margin-right-sm" do %>
            <i class="fa fa-cog text-primary"></i>
          <% end %>
          <%= link_to team, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash text-danger"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_team_path , class: "text-primary" do %>
  <i class="fa fa-plus"></i> new team
<% end %>
