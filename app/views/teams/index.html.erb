<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <div class="row">
      <div class="col-xs-6">
        <h1 class="margin-bottom-sm">Groups</h1>
      </div>

      <div class="col-xs-6">
        <% if current_user.is_admin || current_user.is_officer? %>
          <%= link_to new_team_rating_path, class: "text-primary pull-right margin-top-sm" do %>
            <i class="fa fa-plus"></i> New Group Review
          <% end %>
        <% end %>
        <br>
        <br>
        <%= link_to edit_team_reviews_path, class: "text-info pull-right" do %>
          <i class="fa fa-edit"></i> Group Reviews
        <% end %>

      </div>
    </div>
    <div class="row margin-top-lg">
      <div class="col-xs-12">
        <table class="table table-striped table-hover table-bordered datatable">
          <thead>
            <tr>
              <th>Group Name</th>
              <% if current_user.is_admin %>
                <th class="text-center no-sort">Actions</th>
              <% end %>
            </tr>
          </thead>

          <tbody>
            <% @teams.each do |team| %>
            <% puts team.team_name %>
            <% puts team_adjusted_averages(team.id, '2017-02-28'.to_date) %>
              <tr>
                <td><%= link_to team.team_name, team %></td>

                <% if current_user.is_admin %>
                  <td class="text-center">
                    <%= link_to edit_team_path(team), class: "margin-right-sm" do %>
                      <i class="fa fa-cog text-primary"></i>
                    <% end %>
                    <%= link_to team, method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <i class="fa fa-trash text-danger"></i>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to new_team_path , class: "text-primary" do %>
          <i class="fa fa-plus"></i> New Group
        <% end %>
      </div>
    </div>
  </div>
</div>