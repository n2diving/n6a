<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <h1 class="margin-bottom-lg">teams</h1>

    <table class="table table-striped table-hover table-bordered sortable">
      <thead>
        <tr>
          <th>team name</th>
          <% if current_user.is_admin %>
            <th class="text-center">actions</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td><%= link_to team.team_name, team %></td>

            <% if current_user.is_admin %>
              <td class="text-center">
                <%= link_to edit_team_path(team), class: "margin-right-sm" do %>
                  <i class="fa fa-cog text-primary"></i>
                <% end %>
                <%= link_to team, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-trash text-danger"></i>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to new_team_path , class: "text-primary" do %>
      <i class="fa fa-plus"></i> new team
    <% end %>
  </div>
</div>