  <%= f.date_field :end_date, placeholder: "Effective End Date",  class: "form-control margin-bottom-md" %>

  <%= f.check_box :is_hidden %>
  <%= f.label :is_hidden, "Hide Group?", { class: "checkbox-inline" } %>

  <br>
  <br>

  <%= f.submit "save", class: "btn btn-primary btn-center" %>
<% end %>
