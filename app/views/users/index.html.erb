<h1>employees</h1>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>name</th>
      <th>team</th>
      <th>email</th>
      <th>title</th>
      <th class="text-center">actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user %></td>
        <td><%= user.teams.blank? ? '' : (link_to user.teams.first.team_name, user.teams.first) %></td>
        <td><%= user.email %></td>
        <td><%= user.title %></td>
        <td class="text-center">
          <%= link_to edit_user_path(user), class: "margin-right-sm" do %>
            <i class="fa fa-cog text-primary"></i>
          <% end %>
          <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash text-danger"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_user_path, class: "text-primary" do %>
  <i class="fa fa-plus"></i> new user
<% end %>
