<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <h2 class="margin-bottom-md"><%= current_user.full_name %></h2>

    <div class="row margin-bottom-lg">
      <div class="col-xs-12">
        <%= line_chart [{ name: "rating", data: @user_reviews.map{|ur| [ur.rate_period.strftime("%B %Y"), ur.rating ] } }] %>
      </div>
    </div>

    <table class="table table-striped table-hover table-bordered">
      <thead>
      <tr>
        <th>month</th>
        <% headers = ReviewCriteria.order(:name).pluck(:name, :id) %>
        <% headers.each do |criteria| %>
          <th><%= criteria[0] %></th>
        <% end %>
        <th class="text-center">actions</th>
      </tr>
      </thead>

      <tbody>
        <%# @user_reviews.each do |user_review| %>
          <%# headers.each do |criteria| %>
            <%# review = @user_reviews.where(review_criteria_id: criteria[1]).first %>
          <%= @rate_periods.each do |one_month| %>
            <% user_review = @user_reviews.where(rate_period: one_month.to_datetime.end_of_month).first %>
            <%#= user_review.inspect %>
            <% unless user_review.blank? %>
              <tr>
                <td><%= one_month %></td>
                <%= user_review.user_review_rows(headers, user_review.user.id, one_month.to_datetime.end_of_month).each do |one_row| %>
                  <td><%= one_row[1].first %></td>
                  <!--<td colspan="5"></td>-->
                <% end %>
                <td class="text-center">
                  <%= link_to edit_user_review_path(user_review), class: "margin-right-sm" do %>
                    <i class="fa fa-cog text-primary"></i>
                  <% end %>
                  <%= link_to current_user, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="fa fa-trash text-danger"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end%>
        <%# end %>
      </tbody>
    </table>


    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Back', users_path %>
  </div>
</div>
