<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <h2 class="margin-bottom-md"><%= current_user.full_name %></h2>

    <div class="row margin-bottom-lg">
      <div class="col-xs-12">
        <%= line_chart({20.day.ago => 5, 1368174456 => 4, "2013-05-07 00:00:00 UTC" => 7}) %>
      </div>
    </div>

    <table class="table table-striped table-hover table-bordered">
      <thead>
      <tr>
        <th>month</th>
        <th class="text-center">actions</th>
      </tr>
      </thead>

      <tbody>
        <% @months.each do |month| %>
          <tr>
            <td><%= month %></td>
            <td class="text-center">
              <%= link_to edit_user_path(current_user), class: "margin-right-sm" do %>
                <i class="fa fa-cog text-primary"></i>
              <% end %>
              <%= link_to current_user, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-trash text-danger"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>


    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Back', users_path %>
  </div>
</div>
