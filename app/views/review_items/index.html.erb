<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <h1 class="margin-bottom-lg">review items</h1>

    <table class="table table-striped table-hover table-bordered sortable">
      <thead>
        <tr>
          <th>name</th>
          <th>display name</th>
          <th>evaluation criteria</th>
          <th>scale</th>
          <th>start date</th>
          <th>response allowed?</th>
          <% if current_user.is_admin %>
            <th class="text-center">actions</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @review_items.each do |review_item| %>
          <tr>
            <td><%= review_item.name %></td>
            <td><%= review_item.display_name %></td>
            <td><%= review_item.evaluation_criteria %></td>
            <td><%= review_item.scale %>
            <td><%= review_item.start_date.strftime("%B %Y") %></td>
            <td><%= review_item.response_allowed ? 'yes' : 'no' %></td>

            <% if current_user.is_admin %>
              <td class="text-center">
                <%= link_to edit_review_item_path(review_item), class: "margin-right-sm" do %>
                  <i class="fa fa-cog text-primary"></i>
                <% end %>
                <%= link_to review_item, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-trash text-danger"></i>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to new_review_item_path , class: "text-primary" do %>
      <i class="fa fa-plus"></i> new review item
    <% end %>
  </div>
</div>
