<h1>employee teams</h1>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>user</th>
      <th>team</th>
      <th>team lead?</th>
      <th>supervisor?</th>
      <th class="text-center">actions</th>
    </tr>
  </thead>

  <tbody>
    <% @employee_teams.each do |employee_team| %>
      <tr>
        <td><%= employee_team.user.full_name %></td>
        <td><%= employee_team.team.team_name %></td>
        <td><%= employee_team.team_lead ? 'yes' : 'no' %></td>
        <td><%= employee_team.supervisor ? 'yes' : 'no' %></td>
        <td class="text-center">
          <%= link_to edit_employee_team_path(employee_team), class: "margin-right-sm" do %>
            <i class="fa fa-cog text-primary"></i>
          <% end %>
          <%= link_to employee_team, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash text-danger"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_employee_team_path, class: "text-primary" do %>
  <i class="fa fa-plus"></i> new employee team
<% end %>