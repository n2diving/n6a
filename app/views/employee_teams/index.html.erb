<h1>Employee Teams</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Team lead</th>
      <th>Supervisor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_teams.each do |employee_team| %>
      <tr>
        <td><%= employee_team.user %></td>
        <td><%= employee_team.team_lead %></td>
        <td><%= employee_team.supervisor %></td>
        <td><%= link_to 'Show', employee_team %></td>
        <td><%= link_to 'Edit', edit_employee_team_path(employee_team) %></td>
        <td><%= link_to 'Destroy', employee_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

