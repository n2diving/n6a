<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <h1 class="margin-bottom-lg">Review Items by Roles</h1>

    <table class="table table-striped table-hover table-bordered datatable">
      <thead>
      <tr>
        <th>Review Item</th>
        <th>Role</th>
        <th>Short Label</th>
        <th>Evaluation Criteria</th>
        <% if current_user.is_admin || current_user.is_officer? %>
          <th class="text-center no-sort">Actions</th>
        <% end %>
      </tr>
      </thead>

      <tbody>
        <% @review_items_by_roles.each do |review_items_by_role| %>
          <tr>
            <td><%= review_items_by_role.review_item.display_name %></td>
            <td><%= review_items_by_role.form_role.role + " (#{review_items_by_role.form_role.abbreviation})" %></td>
            <td><%= review_items_by_role.short_label %></td>
            <td><%= review_items_by_role.evaluation_criteria %></td>
            <% if current_user.is_admin || current_user.is_officer? %>
              <td class="text-center">
                <%= link_to edit_review_items_by_role_path(review_items_by_role), class: "margin-right-sm" do %>
                  <i class="fa fa-cog text-primary"></i>
                <% end %>
                <%= link_to review_items_by_role, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-trash text-danger"></i>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to new_review_items_by_role_path, class: "text-primary margin-bottom-md" do %>
      <i class="fa fa-plus"></i> New Review Items by Role
    <% end %>

  </div>
</div>