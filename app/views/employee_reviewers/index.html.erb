<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <h1 class="margin-bottom-lg">Employee Reviewers</h1>

    <table class="table table-striped table-hover table-bordered datatable">
      <thead>
        <tr>
          <th>Employee</th>
          <th>Reviewer</th>
          <% if current_user.is_admin || current_user.is_officer? %>
            <th class="text-center no-sort">actions</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @employee_reviewers.each do |employee_reviewer| %>
          <tr>
            <td><%= employee_reviewer.employee.full_name %></td>
            <td><%= employee_reviewer.reviewer.full_name %></td>
            <% if current_user.is_admin || current_user.is_officer? %>
              <td class="text-center">
                <%= link_to edit_employee_reviewer_path(employee_reviewer), class: "margin-right-sm" do %>
                  <i class="fa fa-cog text-primary"></i>
                <% end %>
                <%= link_to employee_reviewer, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="fa fa-trash text-danger"></i>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to new_employee_reviewer_path, class: "text-primary margin-bottom-md" do %>
      <i class="fa fa-plus"></i> New Employee Reviewer
    <% end %>
  </div>
</div>