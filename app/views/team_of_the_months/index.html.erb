<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <h1 class="margin-bottom-lg">Team Of The Month</h1>

    <table class="table table-striped table-hover table-bordered datatable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Rate period</th>
          <th class="text-center no-sort">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @team_of_the_months.each do |team_of_the_month| %>
          <tr>
            <td><%= team_of_the_month.name %></td>
            <td><%= team_of_the_month.rate_period.strftime("%B %Y") %></td>
            <td class="text-center">
              <%= link_to edit_team_of_the_month_path(team_of_the_month), class: "margin-right-sm" do %>
                <i class="fa fa-cog text-primary"></i>
              <% end %>
              <%= link_to team_of_the_month, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-trash text-danger"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="margin-bottom-xl"></div>

    <%= link_to new_team_of_the_month_path , class: "text-primary" do %>
      <i class="fa fa-plus"></i> New Team Of The Month
    <% end %>
  </div>
</div>